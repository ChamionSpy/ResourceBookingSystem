@model ResourceBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1 class="mb-4 text-center">Delete Booking</h1>

<h3 class="text-danger">Are you sure you want to delete this booking?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString("dd MMMM yyyy, h:mm tt")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime.ToString("dd MMMM yyyy, h:mm tt")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Purpose)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Purpose)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resource)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resource.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button> |
        <a asp-action="Index" class="btn btn-secondary ms-2">
           <i class="bi bi-arrow-left"></i> Back to Bookings List
        </a>
    </form>
</div>
