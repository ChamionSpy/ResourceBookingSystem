@model ResourceBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Bookings Details";
}

<h1 class="mb-4 text-center">Booking Details</h1>

<div class="row justify-content-center">
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.StartTime.ToString("dd MMMM yyyy, h:mm tt")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class = "col-sm-10">
            @Model.EndTime.ToString("dd MMMM yyyy, h:mm tt")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Purpose)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Purpose)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resource)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resource.Name)
        </dd>
    </dl>
</div>
<div class="mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Bookings List
    </a>
</div>
